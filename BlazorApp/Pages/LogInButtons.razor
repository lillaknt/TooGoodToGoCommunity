@inject NavigationManager navMgr
@inject IAuthService authService

@page "/LogInButtons"
@using HttpClients.ClientInterfaces


<AuthorizeView>
    <Authorized>
        <img class="icon" src="css/img/Logout.png" @onclick="Logout"/>
    </Authorized>
    <NotAuthorized>
        <img class="icon" src="css/img/Login.png" @onclick="Login"/>
    </NotAuthorized>
</AuthorizeView>

@code {

    private void Login()
    {
        navMgr.NavigateTo("/LogIn");
    }

    private async Task Logout()
    {
        await authService.LogoutAsync();
        navMgr.NavigateTo("/");
    }

}